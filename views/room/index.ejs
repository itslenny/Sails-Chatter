<h1>Room List</h1>
<div class="row">
    <div class="col-sm-6">
        <form method="post" action="/room" class="form-inline">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Room Name" required>
            </div>
            <input value="Create Room" type="submit" class="btn btn-primary">
        </form>
        <ul id="roomList">
            <% rooms.forEach(function(room){ %>
                <li><a href="/room/<%= room.id %>"><%= room.name %></a> (<%= room.users.length %> users)</li>
            <% }); %>
        </ul>
    </div>
</div>